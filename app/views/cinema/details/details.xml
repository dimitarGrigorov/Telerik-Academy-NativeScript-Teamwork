<Page loaded="onLoaded" navigatedTo="onNavigatedTo">
	<DockLayout stretchLastChild="true">
		<Label id="header" dock="top" text="{{ cinemaData.name }}" />
		<Button dock="bottom" text="Show comment section" tap="showCommentSection" />
		<GridLayout dock="left" rows="250, *" columns="auto, *, auto">
			<ActivityIndicator busy="{{ isLoading }}" row="0" col="0" rowSpan="2" colSpan="3" />
			<Image class="details-image" src="{{ cinemaData.url }}" row="0" col="0" colSpan="3" />
			<Button text="Share" tap="share" row="1" col="0" />
			<Button text="Rate" tap="" row="1" col="2" />
		</GridLayout>
	</DockLayout>
</Page>