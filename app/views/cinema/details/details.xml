<Page loaded="onLoaded" navigatedTo="onNavigatedTo">
	<StackLayout orientation="vertical">
		<DockLayout>
  			<Label dock="top" text="{{ name }}" class="header" />
		</DockLayout>
	    <Image class="detail-image" src="{{ url }}" />
		<GridLayout rows="auto" columns="auto, *, auto">
			<Button text="Share" tap="" row="0" col="0" />
			<Button text="Rate" tap="" row="0" col="2" />
		</GridLayout>

		<Button text="Add a comment" tap="" />

	  	<ListView items="{{ comments }}" itemTap="onItemTap">
	  		<ListView.itemTemplate>
			    <Label class="comment" text="{{ $value.text }}" textWrap="true" />
	  		</ListView.itemTemplate>
	  	</ListView>
	</StackLayout>
</Page>