<Page navigatedTo="navigatedTo">
    <Page.actionBar>
        <ActionBar title="Cinemas"></ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto,auto,auto,5*" columns="1*,2*">
        <Label row="0" col="0" text="Name" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="name" text="" row="0" col="1" />
        <Label row="1" col="0" text="Rating" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="rating" text="" row="1" col="1" />
        <Button text="Filter" tap="filter" row="2" colspan="2"></Button>
         <ListView row="3" colspan="2" items="{{ cinemaList }}">
            <ListView.itemTemplate>
                <Label text="{{ name }}" />
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>
