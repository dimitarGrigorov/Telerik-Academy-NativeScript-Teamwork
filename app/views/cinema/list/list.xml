<Page class="page" navigatedTo="navigatedTo">
    <Page.actionBar>
        <ActionBar title="Cinemas"></ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto,auto,5*" columns="1*,2*,1*">
        <Label row="0" col="0" text="Name" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="name" text="" row="0" col="1" />
        <Label row="1" col="0" text="Rating" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="rating" text="" row="1" col="1" />
        <Button class="btn" text="Filter" tap="filter" row="0" col="3" rowspan="2" />
        <ListView class="list" row="2" colspan="3" items="{{ cinemaList }}" itemTap="viewDetails">
            <ListView.itemTemplate>
                <GridLayout class="list-item" columns="auto, *, auto">
                    <Image class="img" width="96" src="{{ url }}" row="0" col="0" />
                    <StackLayout row="0" col="1">
                        <Label text="{{ name }}" />
                    </StackLayout>
                    <GridLayout row="0" col="2">
                        <Image horizontalAlignment="center" verticalAlignment="center" width="64" src="~/images/rating.png" />
                        <Label class="rating" horizontalAlignment="center" verticalAlignment="center" text="{{ rating }}" />
                    </GridLayout>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>
