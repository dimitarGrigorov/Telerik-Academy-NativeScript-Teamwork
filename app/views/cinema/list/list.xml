<Page class="page" navigatedTo="navigatedTo">
    <Page.actionBar>
        <ActionBar title="Cinemas"></ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto,auto,auto,5*,auto" columns="1*,2*,1*">
        <Label row="0" col="0" text="Name" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="name" text="" row="0" col="1" />
        <Label row="1" col="0" text="Rating" horizontalAlignment="right" verticalAlignment="center" />
        <TextField id="rating" text="" row="1" col="1" />
        <Button class="btn" text="Filter" tap="filter" row="0" col="3" rowspan="2" />
        <ActivityIndicator row="2" busy="{{ isLoading }}" rowSpan="2" colSpan="3" horizontalAlignment="center" verticalAlignment="center" />
        <ListView id="cinema-list" class="list" row="3" colspan="3" items="{{ cinemaList }}" itemTap="viewDetails">
            <ListView.itemTemplate>
                <GridLayout class="list-item" columns="auto,*,auto,auto">
                    <Image class="img" width="96" src="{{ url }}" row="0" col="0" />
                    <Label row="0" col="1" text="{{ name }}" />
                    <Image row="0" col="2" horizontalAlignment="center" verticalAlignment="center" width="48" src="~/images/rating.png" />
                    <Label row="0" col="2" class="rating" horizontalAlignment="center" verticalAlignment="center" text="{{ rating }}" />
                    <Image row="0" col="3" horizontalAlignment="center" verticalAlignment="center" width="48" src="~/images/comments.png" />
                    <Label row="0" col="3" class="comments" horizontalAlignment="center" verticalAlignment="center" text="{{ comments.length }}" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button class="btn" text="Prev" tap="prev" row="4" col="0" />
        <Button class="btn" text="Next" tap="next" row="4" col="2" />
    </GridLayout>
</Page>
