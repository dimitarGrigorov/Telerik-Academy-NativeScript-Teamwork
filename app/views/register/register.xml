<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Sign up"></ActionBar>
    </Page.actionBar>
    <StackLayout>
        <TextField text="{{ username }}" hint="Username" />
        <TextField text="{{ password }}" secure="true" hint="Password" />
        <TextField text="{{ name }}" hint="Name" />
        <TextField text="{{ email }}" id="email" hint="Email Address" keyboardType="email" />
        <Button text="Take Profile Picture" tap="takeProfilePicture" />
        <Button text="Sign Up" tap="register" />
    </StackLayout>
</Page>