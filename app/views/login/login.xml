<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Sign in"></ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical">
        <TextField text="{{ username }}" hint="Username" />
        <TextField secure="true" text="{{ password }}" hint="Password" />

        <Button class="btn" text="Sign in" tap="signIn" />
        <Button class="btn" text="Sign up" tap="register" />
    </StackLayout>
</Page>